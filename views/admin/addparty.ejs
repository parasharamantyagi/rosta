<!DOCTYPE html>
<html class="no-js" lang="en">
  <%- include('include/Header') -%>
  <body>
    <%- include('include/Sidebar') -%>
    <!-- Start Welcome area -->
    <div class="all-content-wrapper">
      <%- include('include/Logo') -%> <%- include('include/Menu',{menu:
      'Party'}) -%>

      <!-- start menu -->

      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-tab-pro-inner">
              <div id="myTabContent" class="tab-content custom-product-edit">
                <div
                  class="product-tab-list tab-pane fade active in"
                  id="description"
                >
                  <form
                    method="POST"
                    action="<%= formAction %>"
                    accept-charset="UTF-8"
                    id="general_form"
                    novalidate="novalidate"
                  >
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Name</label>
                        <input
                          class="form-control"
                          name="name"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(partyData,'name') %>"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Short name</label>
                        <input
                          class="form-control"
                          name="short_name"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(partyData,'short_name') %>"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Email</label>
                        <input
                          class="form-control"
                          name="email"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(partyData,'email') %>"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Logo (550x176 px, 825x264 px)</label>
                        <input
                          class="form-control"
                          name="image_link"
                          type="file"
                          aria-invalid="false"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Small Party</label>
                        <select name="small_party" class="form-control">
                          <option value="1"  <%= (rosta.check_obj(partyData) && partyData.small_party === '1') ? 'selected' : '' %>>yes</option>
                          <option value="0" <%= (rosta.check_obj(partyData) && partyData.small_party === '0') ? 'selected' : '' %>>No</option>
                        </select>
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Add url</label>
                        <input
                          class="form-control"
                          name="url"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(partyData,'url') %>"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Bar in diagram</label>
                        <input
                          class="form-control"
                          name="bar_in_diagram"
                          type="color"
                          aria-invalid="false"
                          value="<%= rosta.formData(partyData,'bar_in_diagram') %>"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12 form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="description">
<%= rosta.formData(partyData,'description') %></textarea
                        >
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="text-center custom-pro-edt-ds">
                          <button
                            type="submit"
                            class="btn data waves-effect waves-light m-r-10"
                          >
                            Save
                          </button>
                          <button
                            type="button"
                            class="btn btn-ctl-bt waves-effect waves-light"
                          >
                            Discard
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- end menu -->
    </div>

    <%- include('include/Footer') -%>
  </body>
</html>
