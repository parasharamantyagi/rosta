<!DOCTYPE html>
<html class="no-js" lang="en">
  <%- include('./../include/Header') -%>
  <body>
    <%- include('./../include/Sidebar') -%>
    <!-- Start Welcome area -->
    <div class="all-content-wrapper">
      <%- include('./../include/Logo') -%> <%-
      include('./../include/Menu',{menu: 'Deal'}) -%>
      <!-- start menu -->
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-tab-pro-inner">
              <div id="myTabContent" class="tab-content custom-product-edit">
                <div
                  class="product-tab-list tab-pane fade active in"
                  id="description"
                >
                  <form
                    method="POST"
                    action="<%= formAction %>"
                    accept-charset="UTF-8"
                    id="general_form"
                    novalidate="novalidate"
                  >
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Name</label>
                        <input
                          class="form-control"
                          name="name"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(dealData,'name') %>"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Email</label>
                        <input
                          class="form-control"
                          name="email"
                          type="email"
                          aria-invalid="false"
                          value="<%= rosta.formData(dealData,'email') %>"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Image</label>
                        <input
                          class="form-control"
                          name="deals"
                          type="file"
                          aria-invalid="false"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>URL</label>
                        <input
                          class="form-control"
                          name="url"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(dealData,'url') %>"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>price</label>
                        <input
                          class="form-control"
                          name="price"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(dealData,'price') %>"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Best seller</label>
                        <select name="best_seller" class="form-control">
                          <option value="yes" <%= (rosta.check_obj(dealData) && dealData.best_seller === 'yes') ? 'selected' : '' %>>yes</option>
                          <option value="no" <%= (rosta.check_obj(dealData) && dealData.best_seller === 'no') ? 'selected' : '' %>>no</option>
                        </select>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6 form-group">
                        <label>Stock</label>
                        <input
                          class="form-control"
                          name="stock"
                          type="text"
                          aria-invalid="false"
                          value="<%= rosta.formData(dealData,'stock') %>"
                        />
                      </div>
                      <div class="col-md-6 form-group">
                        <label>Category</label>
                        <select name="category" class="form-control" <%= (rosta.check_obj(dealData) && dealData._id) ? 'disabled' : '' %>>
                          <% categories.forEach(function(category){ %>
                          <option value="<%= category._id %>">
                            <%- category.name %>
                          </option>
                          <% }); %>
                        </select>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12 form-group">
                        <label>Description</label>
                        <input
                          class="form-control"
                          name="description"
                          type="text"
                          aria-invalid="false"
                        />
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="text-center custom-pro-edt-ds">
                          <button
                            type="submit"
                            class="btn btn-ctl-bt waves-effect waves-light m-r-10"
                          >
                            Save
                          </button>
                          <button
                            type="button"
                            class="btn btn-ctl-bt waves-effect waves-light"
                          >
                            Discard
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- end menu -->
    </div>

    <%- include('./../include/Footer') -%>
  </body>
</html>
